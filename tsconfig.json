{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
			"@layouts/*" : ["src/layouts/*"],
			"@styles/*" : ["src/styles/*"],
			"@utils/*" : ["src/utils/*"],
			"@db/*": ["src/db/*"],
			"@config" : ["src/config.ts"]
    }
	}
}
